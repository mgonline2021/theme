{% capture listItems %}
{% for item in collections[settings.collection_categories_template].products limit: settings.collection_categories_template_limit %}
<div role="listitem" class="w-dyn-item">
            <a href="{{ item.url | within: collection }}" class="inner-grid-cms vertical w-inline-block">
              <div class="product-image-wrapper home"><img src="{{ item.featured_image | img_url: 'master' }}" loading="lazy" alt="{{ item.featured_image.alt }}" class="image-cms" data-commerce-type="variation-image" srcset="{{ item.featured_image | img_url: '1920x' }} 1920w,{{ item.featured_image | img_url: '1600x' }} 1600w,{{ item.featured_image | img_url: '1366x' }} 1366w,{{ item.featured_image | img_url: '1024x' }} 1024w,{{ item.featured_image | img_url: '768x' }} 768w,{{ item.featured_image | img_url: '640x' }} 640w"></div>
              <div id="w-node-d15bb096-b534-7de3-5a78-6f0a85479ac5-aa251566" class="info-members">
                <h3 class="heading-small-new">{{ item.title }}</h3>
                <p data-commerce-type="variation-price" class="text-small">{{ item.price | money }}</p>
              </div>
            </a>
          </div>
{%- endfor -%}
{% endcapture %}
{% assign items_length = listItems | strip | size %}
<div class="w-dyn-list" udy-collection="product">
        {%- unless items_length == 0 -%}<div role="list" class="collection-list-products w-dyn-items">
          {{ listItems }}
        </div>{%- endunless -%}
        {%- if items_length == 0 -%}<div class="w-dyn-empty">
          <div>No items found.</div>
        </div>{%- endif -%}
      </div>