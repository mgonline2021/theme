{% capture listItems %}

{%- assign allItems = blogs['post'].articles -%}
{%- for item in allItems -%}{% assign refs = item.metafields.udesly['category'] | map: "handle" %}{% unless handle_to_check %}{% assign handle_to_check = article.handle | replace: 'blog-categories/', ''  %}{% endunless %}{% assign condition_0 = false %}                  
                {% if refs contains handle_to_check %}
                    {% assign condition_0 = true %}
                {% endif %}{% if condition_0 %}
 <div role="listitem" class="w-dyn-item">
            <a href="{{ item.url }}" class="inner-grid-cms vertical w-inline-block">
              <div class="product-image-wrapper"><img src="{{ item.image | img_url: 'master' }}" loading="lazy" alt="{{ item.image.alt }}" class="image-cms" srcset="{{ item.image | img_url: '1920x' }} 1920w,{{ item.image | img_url: '1600x' }} 1600w,{{ item.image | img_url: '1366x' }} 1366w,{{ item.image | img_url: '1024x' }} 1024w,{{ item.image | img_url: '768x' }} 768w,{{ item.image | img_url: '640x' }} 640w"></div>
              <div id="w-node-afdd43e7-7df4-cab4-f4ac-b9183975a493-2a251565" class="info-members">
                <div class="text-small text-white-opacity">{{ item.created_at | date: "%B %e, %Y" }}</div>
                <h3 class="heading-regular text-light">{{ item.title }}</h3>
              </div>
            </a>
          </div>
{% endif %}
{%- endfor -%}

{% endcapture %}
{% assign items_length = listItems | strip | size %}

<div class="w-dyn-list" udy-collection="post">
        {%- unless items_length == 0 -%}<div role="list" class="collection-list-news _3-col w-dyn-items">
          {{ listItems }}
        </div>{%- endunless -%}
        {%- if items_length == 0 -%}<div class="w-dyn-empty">
          <div>No items found.</div>
        </div>{%- endif -%}
      </div>